.right-side
  flex-basis 25%
  height 100%
  position relative
  background white
  display flex
  align-items center


  &-user-container
    order 1
    h2
      color #6d6e71
      padding-left 20px
    .right-side-user
      display flex
      flex-wrap wrap
      margin 20px 0 20px 20px
      border-bottom 1px solid lightgray
      width 60%


      .right-side-user-logo
        background white
        z-index 2
        position relative
        bottom -1px
        img
          width 40px
          height 40px
          border-radius 20px
          border 1px solid #6d6e71
          display block


      .right-side-user-info
        margin-left 10px

        .right-side-user-name
          margin-bottom 10px

        a
          color #8dc63f
          text-decoration none
          a:hover
            text-decoration #8dc63f






@media all and (max-width: 1024px)
  .right-side-user
    justify-content center

@media all and (max-width: 768px)
  .right-side
    display none